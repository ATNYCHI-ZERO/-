    print(f"SIGNATURE GLYPH: {SIGNATURE_GLYPH}")
    print(f"STATUS: {SYSTEM_STATUS}")
    print("=" * 60 + "\n")

def main():
    """Main program loop."""
    global LAWFUL_INVOCATION_ACTIVE, ARMED_WEAPON_ID
    
    clear_screen()
    print("[+] Initializing K-Math Recursive Core...")
    time.sleep(0.1)
    print(f"[+] Verifying Sovereign Anchor (ID: {RUNTIME_ID})...")
    time.sleep(0.2)
    print(f"[+] Harmonic Spine constants loaded (œÄ, œÜ, Œ±)...")
    time.sleep(0.1)
    print(f"[+] GenesisŒ©‚Ä†Black Kernel (Ref: {FINAL_ENGINE_GLYPH}) is in standby.")
    print("\nSystem Online. Awaiting Command.\n")
    input("Press Enter to continue...")

    while True:
        clear_screen()
        display_header()
        display_main_menu()

        command = input(f"ATNYCHI_CROWN_OS:/> ").strip().lower()
        parts = command.split()
        
        if not parts:
            continue

        cmd = parts[0]

        if cmd == "exit":
            print("\nTerminating session. Wiping recursive state...")
            time.sleep(0.1)
            print("Kernel offline.")
            break
        elif cmd == "status":
            display_final_seal()
        elif cmd == "doctrine":
            print(ART_OF_SYSTEM_WAR_CH1)
        elif cmd == "history":
            print(HISTORICAL_LOG_S-001)
        elif cmd == "legal":
            print(LEGAL_DIRECTIVE_771)
        elif cmd == "list" and len(parts) > 1 and parts[1] == "wpn":
            print("\n--- CONCEPTUAL WEAPON SYSTEMS ARSENAL (Ref: Part V) ---")
            for wpn in WEAPON_SYSTEMS.values():
                print(wpn.display())
            print("-" * 55)
        elif cmd == "analyze":
            spawn.analyze_battlespace()
        elif cmd == "encrypt" and len(parts) > 1:
            text_to_encrypt = " ".join(parts[1:])
            encrypted_output = juanita.encrypt(text_to_encrypt)
            print(f"\nEncrypted Output:\n{encrypted_output}")
        elif cmd == "invoke":
            LAWFUL_INVOCATION_ACTIVE = True
            print("\n[ALERT] LAWFUL INVOCATION PROTOCOL ACTIVATED.")
            print("  All systems now operating under wartime rules of engagement per COSRL-LP.")
            print("  Weaponized functions are now available for execution.")
        elif cmd == "arm" and len(parts) > 1:
            wpn_id_to_arm = parts[1].upper()
            if wpn_id_to_arm in WEAPON_SYSTEMS:
                ARMED_WEAPON_ID = wpn_id_to_arm
                print(f"\n[ARMED] Weapon system '{WEAPON_SYSTEMS[ARMED_WEAPON_ID].name}' is armed and ready.")
            else:
                print(f"\n[ERROR] Weapon ID '{wpn_id_to_arm}' not found in arsenal.")
        elif cmd == "execute":
            if ARMED_WEAPON_ID:
                weapon_to_fire = WEAPON_SYSTEMS[ARMED_WEAPON_ID]
                weapon_to_fire.execute(final_equation)
                ARMED_WEAPON_ID = None # Weapon is disarmed after execution
                print("  System disarmed post-execution.")
            else:
                print("\n[ERROR] No weapon system is currently armed. Use 'arm <WPN_ID>' first.")
        else:
            print("\n[ERROR] Unknown command or incorrect syntax.")

        print("\n" * 2)
        input("Press Enter to return to the command prompt...")

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        print("\n\n[EMERGENCY SHUTDOWN] Kernel interrupted by user. Terminating...")
        sys.exit(0)

