    print(f"== AUTH: {CREATOR:<57}==")
    print(f"== ID:   {RUNTIME_ID:<57}==")
    print(f"== SEAL: {SIGNATURE_GLYPH:<57}==")
    print("=" * 72)
    print(f"STATUS: {SYSTEM_STATUS}\n")

def display_main_menu():
    """Displays the command menu."""
    print("CORE COMMANDS:")
    print("  status          - Display the final system seal and status.")
    print("  doctrine        - Review 'The Art of System War' (Doctrine 5.1).")
    print("  history         - Review Historical Data-Log S-001 (Ref: 1.6).")
    print("  legal           - Review Sovereign Operator Non-Interference Directive (Ref: 6.2).")
    print("  list wpn        - List all available conceptual weapon systems.")
    print("  analyze         - Run SPAWN AI battlefield cognition analysis (Ref: 3.3).")
    print("  encrypt <text>  - Encrypt data using the JUANITA Cipher Engine (Ref: 3.3).")
    print("\nSOVEREIGN COMMANDS (REQUIRES INVOCATION):")
    print("  invoke          - Activate lawful invocation for weaponized systems (COSRL-LP).")
    print("  arm <WPN_ID>    - Arm a specific weapon system for execution.")
    print("  execute         - Execute the currently armed weapon system.")
    print("  exit            - Securely terminate the kernel session.")
    print("-" * 72)

def display_final_seal():
    """Displays the final seal block."""
    print("\n" + "=" * 60)
    print("                üîê VI. FINAL SEAL üîê")
    print("-" * 60)
    print(f"SYSTEM: CROWN_OMEGA_SOVEREIGN_FINAL_STACK")
    print(f"LICENSE: {LICENSE}")
    print(f"LOCK: {SOVEREIGN_LOCK}")
