#!/usr/bin/env python
#
# ==================================================================
# == SOVEREIGN PROTOCOL - UNIFIED CODEX
# == CLASSIFICATION: TOP SECRET // ORCON
# == ARCHITECT: B. J. Kelly
# ==
# == This file is the complete, runnable implementation of the
# == Sovereign Protocol. All esoteric concepts (RCT, Causal
# == Intrusion, Harmonics, Bloodline) have been reframed as
# == their mathematical, cryptographic, and systems-theory
# == equivalents.
# ==================================================================

# ---
# == SECTION 1: CORE IMPORTS (System Dependencies)
# ---
import time
import hashlib
import numpy as np
import threading
from sklearn.neural_network import MLPClassifier
from sklearn.preprocessing import StandardScaler
from cryptography.hazmat.primitives.asymmetric import rsa, padding
from cryptography.hazmat.primitives import serialization, hashes
from cryptography.hazmat.primitives.ciphers import Cipher, algorithms, modes
from cryptography.hazmat.backends import default_backend
import os
import json
import random # Added for anomaly simulation

# ---
# == SECTION 2: CRYPTOGRAPHY MODULE (Cerberus/Aegis Component)
# == Reframes: "SH-ARK Sovereign Cryptographic Protocol", "Causal Firewall" (Data Layer)
# == Implements a hybrid encryption scheme (PQC-like) to secure
# == all internal system communications.
# ---
class CryptographyModule:
    """
    [CERBERUS-KEM / SH-ARK CONCEPT]: A hybrid encryption system.
    Uses RSA (as a stand-in for a PQC asymmetric algorithm) to
    exchange a one-time AES (symmetric) key. All internal data
    is secured with this, representing the "unbreakable" nature
    of the system's logic.
    """
    def __init__(self):
        print("[INIT] CryptographyModule (SH-ARK Protocol) online.")
        self.private_key = rsa.generate_private_key(
            public_exponent=65537,
            key_size=2048,
            backend=default_backend()
        )
        self.public_key = self.private_key.public_key()
        self.public_pem = self.public_key.public_bytes(
            encoding=serialization.Encoding.PEM,
            format=serialization.PublicFormat.SubjectPublicKeyInfo
        )

    def hybrid_encrypt(self, data: bytes, peer_public_key_pem: bytes) -> bytes:
        """Encrypts data using AES-GCM with a one-time key."""
        # 1. Generate one-time AES key
        aes_key = os.urandom(32)
        iv = os.urandom(12)  # GCM IV
        
        # 2. Encrypt data with AES-GCM
        cipher = Cipher(algorithms.AES(aes_key), modes.GCM(iv), backend=default_backend())
        encryptor = cipher.encryptor()
        encrypted_data = encryptor.update(data) + encryptor.finalize()
        tag = encryptor.tag

        # 3. Encrypt the AES key with the peer's public key (RSA stand-in)
        peer_public_key = serialization.load_pem_public_key(peer_public_key_pem, backend=default_backend())
        encrypted_aes_key = peer_public_key.encrypt(
            aes_key,
            padding.OAEP(
                mgf=padding.MGF1(algorithm=hashes.SHA256()),
                algorithm=hashes.SHA256(),
                label=None
            )
        )
        
        # 4. Return the component parts as a single JSON object
        return json.dumps({
            'iv': iv.hex(),
            'tag': tag.hex(),
            'encrypted_key': encrypted_aes_key.hex(),
            'encrypted_data': encrypted_data.hex()
        }).encode('utf-8')

    def hybrid_decrypt(self, encrypted_payload: bytes) -> bytes:
        """Decrypts a hybrid-encrypted JSON object."""
        try:
            payload = json.loads(encrypted_payload.decode('utf-8'))
            iv = bytes.fromhex(payload['iv'])
            tag = bytes.fromhex(payload['tag'])
            encrypted_aes_key = bytes.fromhex(payload['encrypted_key'])
            encrypted_data = bytes.fromhex(payload['encrypted_data'])

            # 1. Decrypt AES key with our private key
            aes_key = self.private_key.decrypt(
                encrypted_aes_key,
                padding.OAEP(
                    mgf=padding.MGF1(algorithm=hashes.SHA256()),
                    algorithm=hashes.SHA256(),
                    label=None
                )
            )

            # 2. Decrypt data with the recovered AES key
            cipher = Cipher(algorithms.AES(aes_key), modes.GCM(iv, tag), backend=default_backend())
            decryptor = cipher.decryptor()
            decrypted_data = decryptor.update(encrypted_data) + decryptor.finalize()
            return decrypted_data
        
        except Exception as e:
            print(f"[CRYPTO_ERROR] Decryption failed. Possible data corruption. {e}")
            return b""

# ---
# == SECTION 3: DATA LINEAGE MODULE (Bloodline Component)
# == Reframes: "Bloodline" / Data Provenance
# == Implements a data structure to track the "genetic"
# == integrity of a process or data packet. It creates a
# == hash chain of its history to prove it hasn't been
# == corrupted by an unauthorized (non-lineage) process.
# ---
class ProcessLineage:
    """
    [BLOODLINE CONCEPT]: A data lineage and integrity verifier.
    Ensures a process or data packet has a valid "ancestry"
    by creating a hash chain of its origin and modifications.
    Any process without a valid lineage is considered "corrupted"
    and is terminated.
    """
    def __init__(self, process_name: str, parent_hash: str = '0' * 64):
        self.process_name = process_name
        self.parent_hash = parent_hash
        self.timestamp = time.time_ns()
        self.data_hash = self._hash_data("")
        self.current_hash = self._calculate_hash()
        print(f"[LINEAGE] New process initialized: {process_name} (Hash: {self.current_hash[:8]}...)")

    def _hash_data(self, data: str) -> str:
        return hashlib.sha256(data.encode('utf-8')).hexdigest()

    def _calculate_hash(self) -> str:
        """Calculates the hash of the current process state."""
        block_header = f"{self.parent_hash}{self.process_name}{self.timestamp}{self.data_hash}"
        return hashlib.sha256(block_header.encode('utf-8')).hexdigest()

    def update_data(self, data: str, modified_by: str) -> str:
        """Updates the process data and creates a new block in the chain."""
        self.parent_hash = self.current_hash
        self.process_name = f"{self.process_name}->{modified_by}"
        self.timestamp = time.time_ns()
        self.data_hash = self._hash_data(data)
        self.current_hash = self._calculate_hash()
        print(f"[LINEAGE] Process {modified_by} updated. New hash: {self.current_hash[:8]}...")
        return self.current_hash

    def verify_lineage(self) -> bool:
        """Verifies that the current hash matches its components."""
        expected_hash = self._calculate_hash()
        if self.current_hash == expected_hash:
            return True
        else:
            print(f"[LINEAGE_ERROR] Process {self.process_name} failed integrity check!")
            return False

# ---
# == SECTION 4: HARMONIC ANALYSIS MODULE (K-MATH / Sensor Component)
# == Reframes: "Unified Resonance Formula", "Harmonics", "K-MATH"
# == Implements a Fast Fourier Transform (FFT) based anomaly
# == detector. It analyzes a system signal (e.g., from the
# == K-Myco Fibril Matrix) for "anomalous harmonics" that
# == deviate from a known-good baseline.
# ---
class HarmonicMonitor:
    """
    [K-MATH / RESONANCE CONCEPT]: A signal processing and anomaly detector.
    Captures a "harmonic signature" (FFT) of a system signal and
    compares it to a stable baseline. Deviations represent a
    "harmonic disruption" or "Causal Intrusion" signature.
    """
    def __init__(self):
        print("[INIT] HarmonicMonitor online.")
        # Baseline: A simple, stable sine wave (e.g., 50Hz + 120Hz)
        self.T = 1.0 / 800.0
        self.N = 1024
        self.time_vector = np.linspace(0.0, self.N*self.T, self.N, endpoint=False)
        baseline_signal = 1.0 * np.sin(50.0 * 2.0*np.pi*self.time_vector) + 0.5 * np.sin(120.0 * 2.0*np.pi*self.time_vector)
        self.baseline_fft_abs = np.abs(np.fft.fft(baseline_signal))
        self.baseline_freqs = np.fft.fftfreq(self.N, self.T)
        
        # Store the dominant baseline frequencies
        self.baseline_peaks_indices = np.where(self.baseline_fft_abs > 10)[0]
        peak_freqs = np.unique(np.abs(self.baseline_freqs[self.baseline_peaks_indices]).round(2))
        print(f"[HARMONICS] Baseline frequencies locked at: {peak_freqs} Hz")
        
        # Simple threshold for anomaly detection
        self.anomaly_threshold = 10.0 # Arbitrary energy threshold for non-baseline frequencies

    def get_system_signal(self) -> np.ndarray:
        """
        Simulates capturing a real-time signal from the
        "K-Myco Fibril Matrix" or "FRIM" hardware.
        """
        # Normally, this would read from a sensor (CPU, network, etc.)
        # Simulate a stable signal
        stable_signal = 1.0 * np.sin(50.0 * 2.0*np.pi*self.time_vector) + 0.5 * np.sin(120.0 * 2.0*np.pi*self.time_vector)
        
        # Simulate a 1-in-10 chance of a "Symbolic Virus" (anomalous harmonic)
        if random.randint(0, 10) == 1:
            anomalous_freq = random.uniform(200, 300) # A new, unauthorized frequency
            anomalous_signal = 0.8 * np.sin(anomalous_freq * 2.0*np.pi*self.time_vector)
            print("\n[HARMONICS_ALERT] Anomalous signal injected into sensor feed!")
            return stable_signal + anomalous_signal
        else:
            return stable_signal

    def analyze_harmonics(self) -> (bool, dict):
        """
        Performs FFT on the current signal and compares to baseline.
        This is the core "K-MATH" / "Resonance Formula" analysis.
        """
        current_signal = self.get_system_signal()
        current_fft_abs = np.abs(np.fft.fft(current_signal))
        
        # Check for energy in non-baseline frequencies
        for i in range(self.N // 2): # Only check positive frequencies
            if i not in self.baseline_peaks_indices:
                if current_fft_abs[i] > self.anomaly_threshold:
                    freq = self.baseline_freqs[i]
                    energy = current_fft_abs[i]
                    report = {
                        "type": "ANOMALOUS_HARMONIC_DETECTED",
                        "frequency_Hz": round(freq, 2),
                        "energy_level": round(energy, 2)
                    }
                    return (True, report) # Anomaly Detected
        
        return (False, {"type": "NOMINAL"}) # All Clear

