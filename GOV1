        print("[INIT] KIDA_AI_Core (Malabar Framework) online.")
        self.scaler = StandardScaler()
        self.model = MLPClassifier(hidden_layer_sizes=(10,), max_iter=500, activation='relu', solver='adam', random_state=1)
        
        # Train on some dummy data
        # Features: [frequency, energy_level]
        # Labels: 0=Ignore, 1=Log, 2=Quarantine
        X_train = [
            [210, 15], [250, 20], [280, 50], # Quarantine
            [180, 11], [300, 12],            # Log
            [50, 400], [120, 200]            # Ignore (Baseline)
        ]
        y_train = [2, 2, 2, 1, 1, 0, 0]
        X_scaled = self.scaler.fit_transform(X_train)
        self.model.fit(X_scaled, y_train)
        print("[KIDA] AI model trained on threat signatures.")

    def classify_threat(self, harmonic_report: dict) -> str:
        """Uses the trained model to classify a threat and return a directive."""
        if harmonic_report["type"] == "NOMINAL":
            return "MAINTAIN_BASELINE"
        
        freq = harmonic_report["frequency_Hz"]
        energy = harmonic_report["energy_level"]
        
        # Scale the input for the model
        scaled_input = self.scaler.transform([[freq, energy]])
        prediction = self.model.predict(scaled_input)[0]
        
        if prediction == 0:
            return f"IGNORE (Baseline harmonic {freq}Hz)"
        elif prediction == 1:
            return f"LOG_AND_MONITOR (Low-energy anomaly: {freq}Hz)"
        elif prediction == 2:
            return f"ACTION_QUARANTINE (High-energy threat: {freq}Hz)"
        
